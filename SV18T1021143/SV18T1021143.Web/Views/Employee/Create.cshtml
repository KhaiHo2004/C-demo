@model SV18T1021143.DomainModel.Employee
<div class="box box-primary">
    <div class="box-header with-border header">
        <h3 class="box-title"></h3>

        <div class="box-tools pull-right">

        </div>

        <form class="form-horizontal" action="~/employee/save" method="post">
            <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
            

            <div class="form-group">
                <label class="control-label col-sm-2">Họ:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="LastName" autofocus value="@Model.LastName">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhân viên:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="FirstName" value="@Model.FirstName">
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="BirthDate" value="@Model.BirthDate">
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <input type="file" id="myfile" name="Photo" value="@Model.Photo">
                </div>
            </div>





            <div class="form-group">
                <label class="control-label col-sm-2">Chú ý:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Notes" value="@Model.Notes">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Email" value="@Model.Email">
                </div>
            </div>
      
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save">Lưu dữ liệu </i>
                    </button>
                    <a class="btn btn-warning" href="~/employee">
                        <i class="fa fa-ban">Quay lại</i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>



