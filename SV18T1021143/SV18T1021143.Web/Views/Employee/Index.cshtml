@model SV18T1021143.Web.Models.EmployeePaginationResultModel
@{
    ViewBag.Title = "Nhân viên";
}


<div class="box box-primary">
    <div class="box-header with-border header">
        <h3 class="box-title"></h3>

        <div class="box-tools pull-right">

        </div>
    </div>
    <div class="box-body">
        <div class="container-fluid">
            <form action="~/employee" method="get">
                <div class="input-group">
                    <input type="text" name="searchValue" class="form-control" placeholder="Nhập tên hoặc địa chỉ nhân viên cần tìm" autofocus value="@Model.SearchValue">
                    <span class="input-group-btn">
                        <button type="submit" name="search" id="search-btn" class="btn btn-info">
                            <i class="fa fa-search"></i>
                        </button>
                        <a href="~/employee/create" class="btn btn-flat btn-primary" style="margin-left:5px;">
                            Bổ sung

                        </a>
                    </span>
                </div>
            </form>
            <div class="row" style="margin: 10px 0 10px 0;">
                <div class="col-sm-12">
                    <p>Có <strong>@Model.RowCount</strong> khách hàng trong tổng số <strong>@Model.PageCount</strong> trang.</p>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th>Mã nhân viên</th>
                            <th>Họ</th>
                            <th>Tên nhân viên</th>
                            <th>Ngày Sinh</th>
                            <th>Ảnh</th>
                            <th>Chú ý </th>
                            <th>Email</th>

                            <th style="width: 75px">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                        <tr>
                            <td>@item.EmployeeID</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.BirthDate</td>
                            <td>
                                <img src="@item.Photo" alt="User Image" style="width:40px ; height:40px">
                            </td>
                            <td>@item.Notes</td>
                            <td>@item.Email</td>

                            <td class="text-right">
                                <a href="~/employee/edit/@item.EmployeeID" class="btn btn-xs btn-flat btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/employee/delete/@item.EmployeeID" class="btn btn-xs btn-flat btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer text-center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="#">@i</a></li>
                }
                else
                {
                    <li><a href="~/employee?page=@i&searchValue = @Model.SearchValue">@i</a></li>
                }
            }


        </ul>
    </div>
    <!-- /.box-footer-->
</div>

