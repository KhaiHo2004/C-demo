@*@model IEnumerable<SV18T1021143.DomainModel.Customer>*@
 
@model SV18T1021143.Web.Models.CustomerPaginationResultModel
@{
    ViewBag.Title = "Khách hàng";
}
<div class="box box-primary">
    <div class="box-header with-border header">
        <h3 class="box-title"></h3>

        <div class="box-tools pull-right">

        </div>
    </div>
    <div class="box-body">
        <div class="container-fluid">
            <form action="~/customer" method="get">
                <div class="input-group">
                    <input type="text" name="searchValue" class="form-control" placeholder="Nhập tên hoặc địa chỉ nhà cung ccần tìm " autofocus value="@Model.SearchValue">
                    <span class="input-group-btn">
                        <button type="submit" id="search-btn" class="btn btn-info">
                            <i class="fa fa-search"></i>
                        </button>
                        <a href="~/customer/create" class="btn btn-flat btn-primary" style="margin-left:5px;" >
                            Bổ sung
                            
                            </a>
                    </span>
                </div>
            </form>
            <div class="row" style="margin: 10px 0 10px 0;">
                <div class="col-sm-12">
                    <p>Có <strong>@Model.RowCount</strong> khách hàng trong tổng số <strong>@Model.PageCount</strong> trang.</p>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th>Mã khách hàng</th>
                            <th>Tên khách hàng</th>
                            <th>Tên liên lạc</th>
                            <th>Địa chỉ</th>
                            <th>Thành phố</th>
                            <th>Mã bưu chính</th>
                            <th>Quốc gia</th>

                            <th style="width: 75px">&nbsp;</th>
                        </tr> 
                    </thead>
                    <tbody>
                      @foreach (var item in Model.Data)
                        {
                        <tr>
                            <td>@item.CustomerID</td>
                            <td>@item.CustomerName</td>
                            <td>@item.ContactName</td>
                            <td>@item.Address</td>
                            <td>@item.City</td>
                            <td>@item.PostalCode</td>
                            <td>@item.Country</td>
                            <td class="text-right">
                                <a href="~/customer/edit/@item.CustomerID" class="btn btn-xs btn-flat btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/customer/delete/@item.CustomerID" class="btn btn-xs btn-flat btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer text-center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="#">@i</a></li>
                }
                else
                {
                    <li><a href="~/customer?page=@i&searchValue = @Model.SearchValue">@i</a></li>
                }
            }

           
        </ul>
    </div>
    <!-- /.box-footer-->
</div>