@model SV18T1021143.DomainModel.Customer
<div class="box box-primary">
    <div class="box-header with-border header">
        <h3 class="box-title"></h3>

        <div class="box-tools pull-right">

        </div>

        <form class="form-horizontal" action="~/customer/save" method="post">
            <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên khách hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="email" name="CustomerName" autofocus value="@Model.CustomerName">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên giao dịch:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="ContactName" value="@Model.ContactName">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Address" value = "@Model.Address">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Quốc gia:</label>
                <div class="col-sm-10">
                    <select class="form-control" name="country">
                        @foreach (var item in SV18T1021143.BusinessLayer.ComomDataService.ListOfCountries())
                        {
                            if (item.CountryName == Model.Country)
                            {
                                <option value="@item.CountryName" selected> @item.CountryName</option>
                            }
                            else
                            {
                                <option value="@item.CountryName"> @item.CountryName</option>
                            }
                        }

                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thành phố:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="City" value="@Model.City">
                </div>
            </div>





            <div class="form-group">
                <label class="control-label col-sm-2">Mã bưu chính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="PostalCode" value="@Model.PostalCode">
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save">Lưu dữ liệu </i>

                    </button>
                    <a class="btn btn-warning" href="~/customer">
                        <i class="fa fa-ban">Quay lại</i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

