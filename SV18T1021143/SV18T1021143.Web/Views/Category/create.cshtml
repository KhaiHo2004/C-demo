@model SV18T1021143.DomainModel.Category
<div class="box box-primary">
    <div class="box-header with-border header">
        <h3 class="box-title"></h3>

        <div class="box-tools pull-right">

        </div>

        <form class="form-horizontal" action="~/category/save" method="post">
            <input type="hidden" name="EmployeeID" value="@Model.CategoryID" />

            <div class="form-group">
                <label class="control-label col-sm-2">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="CategoryName" autofocus value="@Model.CategoryName">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Nội dung:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Description" value="@Model.Description">
                </div>
            </div>




            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save">Lưu dữ liệu </i>
                    </button>
                    <a class="btn btn-warning" href="~/category">
                        <i class="fa fa-ban">Quay lại</i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>



