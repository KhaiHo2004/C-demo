@model SV18T1021143.Web.Models.ShipperPaginationResultModel
@{
    ViewBag.Title = "Người giao hàng";
}

<div class="box box-primary">
    <div class="box-header with-border header">
        <h3 class="box-title"></h3>

        <div class="box-tools pull-right">

        </div>
    </div>
    <div class="box-body">
        <div class="container-fluid">
            <form action="~/shipper" method="get">
                <div class="input-group">
                    <input type="text" name="searchValue" class="form-control" placeholder="Nhập tên hoặc địa chỉ khách hàng cần tìm " autofocus value="@Model.SearchValue">
                    <span class="input-group-btn">
                        <button type="submit" name="search" id="search-btn" class="btn btn-info">
                            <i class="fa fa-search"></i>
                        </button>
                        <a href="~/shipper/create" class="btn btn-flat btn-primary" style="margin-left:5px;">
                            Bổ sung

                        </a>
                    </span>
                </div>
            </form>
            <div class="row" style="margin: 10px 0 10px 0;">
                <div class="col-sm-12">
                    <p>Có <strong>@Model.RowCount</strong> người giao hàng trong tổng số <strong>@Model.PageCount</strong> trang.</p>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th>Mã người giao hàng   </th>
                            <th>Tên người giao hàng</th>
                            <th>Điện thoại</th>
                            <th style="width: 75px">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                        <tr>

                            <td>@item.ShipperID</td>
                            <td>@item.ShipperName</td>
                            <td>@item.Phone</td>

                            <td class="text-right">
                                <a href="~/shipper/edit/@item.ShipperID" class="btn btn-xs btn-flat btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/shipper/delete/@item.ShipperID" class="btn btn-xs btn-flat btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer text-center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="#">@i</a></li>
                }
                else
                {
                    <li><a href="~/shipper?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                }
            }
        </ul>
    </div>
    <!-- /.box-footer-->
</div>
