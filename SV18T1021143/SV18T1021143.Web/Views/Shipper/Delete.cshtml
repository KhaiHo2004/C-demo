@model SV18T1021143.DomainModel.Shippers
@{ ViewBag.Title = "Xóa người giao hàng"; }
<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/shipper/delete/@Model.ShipperID" method="POST">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên người giao hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ShipperName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV18T1021143.BusinessLayer.ComomDataService.InUsedShipper(Model.ShipperID))
                    {
        <p class="text-danger"> Không được xóa người giao hàng</p> }
    else
    {
<button type="submit" class="btn btn-danger">
    <i class="fa fa-remove"></i> Đồng ý xóa
</button>}

                    <a class="btn btn-warning" href="~/shipper">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">

    </div>

</div>


